---
const currentPath = Astro?.url?.pathname || "/";

const navItems = [
  { href: "/", label: "Inicio", icon: "üè†" },
  { href: "/about", label: "Arquitectura", icon: "üß©" },
  { href: "/authors", label: "Autores", icon: "üë•" },
];

function isActive(href: string) {
  if (href === "/") return currentPath === "/";
  return currentPath.startsWith(href);
}
---

<nav class="navbar">
  <div class="nav-container">
    <a href="/" class="brand">
      <img src="/images/navBar40x40.png" alt="Logo" class="brand-logo" width="40" height="40" />
    </a>

    <ul class="nav-list">
      {navItems.map((item) => (
        <li>
          <a href={item.href} class={`nav-link ${isActive(item.href) ? "active" : ""}`}>
            <span class="icon">{item.icon}</span>
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  /* üé® Paleta acad√©mica */
  :root {
    --color-bg: #1e3a8a;       /* Azul institucional oscuro */
    --color-link: #e0e7ff;     /* Azul claro */
    --color-hover: #93c5fd;    /* Azul cielo */
    --color-active: #3b82f6;   /* Azul medio */
    --color-text: #ffffff;
  }

  /* üß≠ Navbar general */
  .navbar {
    background: var(--color-bg);
    color: var(--color-text);
    width: 100%;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.8rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* üè∑Ô∏è Marca */
  .brand {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--color-link);
    font-weight: 700;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
  }

  .brand:hover {
    color: var(--color-hover);
  }

  .brand-logo {
    border-radius: 50%;
    margin-right: 0.6rem;
    transition: transform 0.3s ease;
  }

  .brand-logo:hover {
    transform: scale(1.05);
  }

  /* üîó Navegaci√≥n */
  .nav-list {
    display: flex;
    gap: 1.2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background: var(--color-active);
    color: white;
    transform: translateY(-2px);
  }

  .nav-link.active {
    background: var(--color-hover);
    color: var(--color-bg);
    font-weight: 600;
  }

  .icon {
    font-size: 1.1rem;
  }

  /* üì± Responsive */
  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem;
    }

    .nav-list {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>